@{
	ViewData["Title"] = "Meu Perfil";
	@using MinhasColecoes.MinhasColecoesAPI.ViewModels;
}
@model UsuarioViewModel

<div class="row">
	<div class="col-12 col-md-6 col-lg-4 mb-3 mb-md-0">
		<h1>@Model.Nome</h1>
		<p>@Model.Descricao</p>
		<div class="row">
			<div class="col-8">
				<div class="d-flex">
					<a class="btn btn-secondary">Editar perfil</a>
				</div>
			</div>
			<div class="col-4">
				<div class="d-flex flex-row-reverse justify-content-start">
					<a class="btn btn-danger" asp-area="" asp-controller="Usuario" asp-action="Logout">Sair</a>
				</div>
			</div>
		</div>
	</div>
	<div class="col-12 col-md-6 col-lg-8 mb-3">
		<div class="row row-cols-2 row-cols-md-1 row-cols-lg-3 row-cols-xxl-4 g-3">
			@foreach (ColecaoBasicViewModel c in Model.ColecoesMembro)
			{
				<div class="col">
					<div class="card h-100">
						@if (!c.Publica)
						{ <i class="bi-eye-slash-fill position-absolute end-0 p-2 text-secondary"  title="Coleção particular"
							   style="font-size: 20px; line-height: 20px;"></i> }
						else if (Model.ColecoesDono.Any(d => d.Id == c.Id))
						{ <i class="bi-flag-fill position-absolute end-0 p-2 text-secondary"  title="Dono desta coleção"
							   style="font-size: 20px; line-height: 20px;"></i> }
						<a asp-area="" asp-controller="Colecao" asp-action="Visualizar" asp-route-id="@(c.Id)">
							<img src="~/img/colecao/foto-padrao.png" class="card-img-top" alt="...">
						</a>
						<div class="card-body">
							<h6 class="card-title truncate-2l text-center">@(c.Nome)</h6>
							<p class="card-text truncate-2l">@(c.Descricao)</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

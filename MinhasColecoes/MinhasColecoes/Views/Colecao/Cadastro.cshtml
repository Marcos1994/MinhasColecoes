@{
	ViewData["Title"] = "Cadastrar";
	@using MinhasColecoes.MinhasColecoesAPI.InputModels;
	@using MinhasColecoes.Util;
}
@model ColecaoInputModel

<h1 class="text-primary">Cadastrar Coleção</h1>
<hr />
<div class="row">
	<div class="col-sm-6 col-lg-4">
		<div asp-validation-summary="All" class="text-danger"></div>
		<form asp-action="Cadastrar" enctype="multipart/form-data">
			@if (Model.IdColecaoMaior != null)
			{
				<div class="row mb-3">
					<div>Subcoleção de</div>
					<h3 class="text-primary">@ViewBag.NomeSupercolecao</h3>
					<input asp-for="IdColecaoMaior" class="visually-hidden" />
				</div>
			}
			<div class="form-floating mb-3">
				<input asp-for="Nome" class="form-control" />
				<label asp-for="Nome" class="control-label"></label>
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>

			<div class="form-floating mb-3">
				<textarea asp-for="Descricao" class="form-control"></textarea>
				<label asp-for="Descricao" class="control-label"></label>
				<span asp-validation-for="Descricao" class="text-danger"></span>
			</div>

			<div class="form-group form-check mb-3">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="Publica" /> Coleção Pública
				</label>
			</div>

			<div class="form-floating mb-3">
				<input asp-for="FotoImg" class="btn btn-secondary w-100" accept="image/*" />
				<span asp-validation-for="FotoImg" class="text-danger"></span>
			</div>

			@*<div class="form-group mb-3">
			<img src="~/img/fotos/Colecao/@(Model.Supercolecao.Foto).jpg" class="img-thumbnail rounded mx-auto d-block" asp-append-version="true" style="max-height: 300px; max-width: 100%; border: solid 1px gray; border-radius 5px;" />
		</div>*@

			<div class="row">
				<div class="col-9">
					<div class="d-flex">
						<button type="submit" class="btn btn-primary w-100">Salvar Coleção</button>
					</div>
				</div>
				<div class="col-3">
					<div class="d-flex flex-row-reverse justify-content-start">
						<a asp-action="Index" class="btn btn-danger text-white w-100">Voltar</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>MinhasColecoes - @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/node_modules/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/node_modules/bootstrap-icons/font/bootstrap-icons.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
	<div class="d-flex flex-column wrapper">
		<header>
			<nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
				<div class="container">
					<a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">Minhas Coleções</a>
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Colecao" asp-action="Index">Coleções</a>
						</li>
					</ul>
					<div class="align-self-end">
						<ul class="navbar-nav">
							<li class="nav-item">
								@if (ViewBag.Usuario == null)
								{<a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Login">Conectar-se</a> }
								else
								{
									<a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Index">
										@ViewBag.Usuario
										<i class="bi-person-circle" style="font-size: 20px; line-height: 20px;"></i>
									</a>
								}
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<div class="container flex-fill">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>

		<footer class="border-top text-muted">
			<div class="container">
				<div class="row py-3">
					&copy; 2022 - MinhasColecoes
				</div>
			</div>
		</footer>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
